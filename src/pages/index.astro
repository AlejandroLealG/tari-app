---
import Layout from '../layouts/Layout.astro';
import FoodTypes from '../components/FoodTypes.astro';
import Flavors from '../components/Flavors.astro';
import Origin from '../components/Origin.astro';
import Peppers from '../components/Peppers.astro';
import SliderM from '../components/SliderM';
import SocialSlider from '../components/SocialSlider';

import TopButton from '../components/TopButton.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="pt-[130px]">
			<SliderM client:load/>
		</div>
		
		<section class="flex flex-col bg-[#FDF3E9] items-center justify-center">
			<FoodTypes />
		</section>
		<section class="bg-[#d1ff03] flex flex-row p-10 text-[#192bff] items-center">
			<Flavors />
		</section>
		<section >
			<Origin />
		</section>
		<section class="bg-[#FDF3E9]">
			<Peppers />
		</section>
		<section class="">
			<SocialSlider client:load/>
		</section>
		<TopButton />
	</main>
	
</Layout>