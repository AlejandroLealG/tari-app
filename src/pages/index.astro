---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Waves from '../icons/Waves.astro';
import Slider from '../components/Slider';
import FoodTypes from '../components/FoodTypes.astro';
import Flavors from '../components/Flavors.astro';
import Origin from '../components/Origin.astro';
---

<Layout title="Welcome to Astro.">
	<Header />
	<main>
		<Slider client:load/>
		<section class="flex flex-col bg-[#FDF3E9] items-center justify-center">
			<FoodTypes />
		</section>
		<section class="bg-[#d1ff03] flex flex-row p-10 text-[#192bff] items-center">
			<Flavors />
		</section>
		<section class="">
			<Origin />
		</section>
	</main>
</Layout>

